{
	"descriptors": {
		"shaders": [
			{
				"module": "triangle.vert.spv"
			},
			{
				"module": "triangle.frag.spv"
			}
		]
		"programs": [
			{
				"vertexStage": 0,
				"fragmentStage": 1,
				"primitiveTopology": "triangle-strip",
				"vertexState": {
					"indexFormat": "uint16",
					"vertexBuffers": [
						{
							"attributes": [
								{
									"shaderLocation": 0,
									"offset": 0,
									"format": "float3"
								}
							],
							"arrayStride": 12,
							"stepMode": "vertex"			
						},
						{
							"attributes": [
								{
									"shaderLocation": 1,
									"offset": 0,
									"format": "float3"
								}
							],
							"arrayStride": 12,
							"stepMode": "vertex"
						}
					]
				},
				"colorStates": [
					{
						"format": "bgra8unorm",
