				"usage": [ "OUTPUT_ATTACHMENT", "COPY_SRC" ]
			}
		],
		"renderPasses": [
			{
				"depthStencilAttachment": {
					"depthLoadValue": 1,
					"depthStoreOp": "store",
					"stencilLoadValue": "load",
					"stencilStoreOp": "store"
				},
				"colorAttachments": [
					{
						"loadValue": { "r": 0, "g": 0, "b": 0, "a": 1 },
